<!--components/vi_Dialog/vi_dialog.wxml-->
<view class="vi-dialog" wx:if="{{animation}}">
  <view class="vi-dialog-mask" wx:if="{{ishide}}"></view>
  <view class="vi-dialog-content {{ishide ? 'fadeIn' : 'fadeOut'}}">
    <view class="vi-dialog-header">{{title}}</view>
    <view class="vi-dialog-body">
      <slot></slot>
    </view>
    <view class="vi-dialog-footer" wx:if="{{typeConfirm}}">
      <view class="vi-dialog-btns" bindtap="triggerToCancel">取消</view>
      <view class="vi-dialog-btns" bindtap="triggerToConfirm">确定</view>
    </view>
    <view class="vi-dialog-footer" wx:elif="{{typeAlert}}">
      <view class="vi-dialog-btns" bindtap="triggerToConfirm">确定</view>
    </view>
    <view class="vi-dialog-footer" wx:elif="{{typeCustom}}">
      <slot name="customButton"></slot>
    </view>
    <view class="vi-dialog-footer" wx:else>
      <view class="vi-dialog-btns" bindtap="triggerToCancel">取消</view>
      <view class="vi-dialog-btns" bindtap="triggerToConfirm">确定</view>
    </view>
  </view>
</view>
