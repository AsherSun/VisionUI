@font-face {
  font-family: 'iconfont';
  src: url(data:application/font-woff2;charset=utf-8;base64,) format('woff2'),
      url(data:application/font-woff;charset=utf-8;base64,) format('woff'),
      url('iconfont.svg#iconfont') format('svg');
  font-weight: normal;
  font-style: normal;
}

.icon{
font-weight: 500;
font-style: normal;
font-family: 'iconfont';
}

.icon-add::before{
content: '\e602';
}

.icon-reduce::before {
content: '\e60c';
}

.quantity {
display: flex;
flex-flow: row nowrap;
}

.quantity .icon {
width: 70rpx;
height: 68rpx;
text-align: center;
line-height: 68rpx;
background-color: #F5F5F5;
font-size: 12px;
}

.quantity input {
width: 146rpx;
height: 68rpx;
text-align: center;
background-color: #F5F5F5;
border: none;
font-size: 32rpx;
margin: 0 10rpx;
}