/**index.wxss**/

page {
  background: #f9f9f9;
}

.abilityArea-title {
  padding: 10px 30rpx;
}

.abilityArea-contanier {
  padding: 0 30rpx;
  background-color: #fff;
  overflow: hidden;
  position: relative;
}

.abilityArea-contanier::after, .abilityArea-contanier::before {
  position: absolute;
  content: '';
  height: 1px;
  background: #d9d9d9;
  left: 0;
  right: 0;
  transform: scaleY(0.5);
}

.abilityArea-contanier::before {
  top: 0;
}

.abilityArea-contanier::after {
  bottom: 0;
}

.abilityArea-item {
  height: 45px;
  position: relative;
}

.abilityArea-item + .abilityArea-item::after {
  position: absolute;
  content: '';
  left: 0;
  right: -50px;
  top: 0;
  height: 1px;
  background: #d9d9d9;
  transform: scaleY(0.5);
}

.abilityArea-item-tips {
  color: #999;
}

.abilityArea-item-tips::after {
  content: '';
  float: right;
  width: 8px;
  height: 8px;
  border: 1px solid transparent;
  border-top-color: #ddd;
  border-right-color: #ddd;
  transform: rotate(45deg);
  margin-left: 7px;
}
