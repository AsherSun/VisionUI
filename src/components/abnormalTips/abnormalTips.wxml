<view class="noData no-data-class">
  <view wx:if="{{!isIconSlot}}" class="icon-no-data-tips icon icon-no-data no-data-icon-class"></view>

  <block wx:else>
    <slot name="icon"></slot>
  </block>

  <block wx:if="{{isTipsSlot}}">
    <slot name="tips"></slot>
  </block>

  <view wx:else class="noData__txt no-data-txt-class">
    <block wx:if="{{tipsIsArray}}">
      <view class="" wx:for="{{tips}}" wx:key="{{index}}">{{item}}</view>
    </block>
    <block wx:else>{{tips || '暂无内容'}}</block>
  </view>

  <button bindtap="triggerToTap" wx:if="{{button && isConnected}}">{{button}}</button>

  <button bindtap="triggerToRefresh" wx:if="{{!isConnected}}">{{isConnected}}刷新</button>
</view>
