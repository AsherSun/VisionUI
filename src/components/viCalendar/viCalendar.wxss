.calendar {
  width: 100%;
  height: 648rpx;
  background-color: #FFF;
  border-radius: 8px;
  overflow: hidden;
}

.calendar__header-wrap {
  height: 40px;
  line-height: 40px;
  display: flex;
  flex-flow: row nowrap;
}

.calendar__header__item {
  flex: 1;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 40rpx;
  align-items: center;
}

.calendar__header__item-before, .calendar__header__item-after{
  width: 8px;
  height: 8px;
  border: 1px solid transparent;
}

.calendar__header__item-after {
  border-top: 1px solid #666;
  border-right: 1px solid #666;
  transform: rotate(45deg);
}

.calendar__header__item-before{
  border-top: 1px solid #666;
  border-left: 1px solid #666;
  transform: rotate(-45deg);
}

.calendar__week {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}

.calendar__week-item {
  flex: 1;
  text-align: center;
  color: #999;
  font-size: 12px;
}

.calendar__body {
  border-top: 1rpx solid #DFE4E8;
  padding-top: 1px;
  width: 100%;
  margin: 0 auto;
}

.calendar__day {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}

.calendar__day__item {
  flex: 1;
  text-align: center;
  flex-shrink: 0;
  line-height: 96rpx;
  color: #212B35;
  margin:0 1px 1px;
  position: relative;
}

.calendar__day__item--invalid {
  color: #C4CDD5;
}

.calendar__day--selected {
  background-color: #FDE9A8;
  border-radius: 8px;
  position: relative;
}

.calendar__selected {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: 0;
  right: 2px;
}